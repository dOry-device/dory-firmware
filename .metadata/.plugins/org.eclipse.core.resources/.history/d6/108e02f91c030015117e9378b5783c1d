#include "doryUART.h"

Void doryUARTfxn(UArg argument)
{
	switch(__even_in_range(UCA0IV,4))
	  {
	  case 0:break;                             // Vector 0 - no interrupt
	  case 2:                                   // Vector 2 - RXIFG
		 a[line][col] = UCA0RXBUF;                  // TX -> RXed character
		 if (a[line][col] == LINE_FEED)
		 {
			 last_char[line]=col;
			 if(line<4)
			 {
				 line++;
			 }
			 else
			 {
				 line=0;
				 flag=1;
			 }
			 col=0;
		 }
		 else
		 {
			 col++;
		 }
	    break;
	  case 4:break;                             // Vector 4 - TXIFG
	  default: break;
	  }
}
